<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="5dp">
    <ImageView
        android:id="@+id/playlist_selectorImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/like_playlist"
        android:layout_marginStart="10dp"
        android:layout_alignParentStart="true"/>
    <TextView
        android:id="@+id/playlist_selectorText"
        android:layout_toEndOf="@id/playlist_selectorImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="5dp"
        style="@style/TrackTitleStyle"
        android:text="PLAYLIST_NAME"/>
    <CheckBox
        android:id="@+id/playlist_selectorCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>