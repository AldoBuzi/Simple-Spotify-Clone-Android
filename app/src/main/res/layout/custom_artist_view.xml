<?xml version="1.0" encoding="utf-8"?>
<unipi.sam.emusic.ux_classes.custom_playlist.CustomArtistView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="5dp"
    android:layout_marginVertical="5dp"
    android:orientation="horizontal">
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/artist_mainImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:adjustViewBounds="true"
        android:src="@drawable/artist_placeholder"
        android:background="@color/white"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.Image.PILL"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/artist_titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            style="@style/TrackTitleStyle"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:lines="1"
            android:text="FILL"/>
        <TextView
            android:id="@+id/custom_playlist_subTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Artist"

            android:layout_marginStart="5dp"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="10dp">
    <ImageButton
        android:id="@+id/custom_ArtistOptionsBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/options"
        android:background="@color/transparent"
        app:tint="@color/white"
        android:layout_gravity="end"/>
    </RelativeLayout>
</unipi.sam.emusic.ux_classes.custom_playlist.CustomArtistView>