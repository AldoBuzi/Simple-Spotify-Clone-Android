<?xml version="1.0" encoding="utf-8"?>
<unipi.sam.emusic.ux_classes.track_view.TrackView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="5dp"
    android:orientation="vertical">
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/track_view_contentImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:shapeAppearance="@style/ShapeAppearanceOverlay.App.CornerSize25Percent"
        android:src="@drawable/music_placeholder"/>
    <TextView
        android:id="@+id/track_view_titleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lines="1"
        android:gravity="center"
        style="@style/TrackTitleStyle"
        android:layout_marginTop="10dp"
        android:text="TITLE"/>
    <TextView
        android:id="@+id/track_view_AlbumText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:gravity="center"
        android:text="Album"/>

</unipi.sam.emusic.ux_classes.track_view.TrackView>