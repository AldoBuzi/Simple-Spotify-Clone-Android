<?xml version="1.0" encoding="utf-8"?>
<unipi.sam.emusic.ux_classes.artist.ArtistView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:orientation="vertical">


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/artist_mainImage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:adjustViewBounds="true"
            android:src="@drawable/artist_placeholder"
            android:background="@color/white"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.Image.PILL"/>
        <TextView
            android:id="@+id/artist_titleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            style="@style/ArtistTitleStyle"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:lines="1"
            android:text="FILL"/>
</unipi.sam.emusic.ux_classes.artist.ArtistView>